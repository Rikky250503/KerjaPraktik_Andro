<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_transasksi_gudang"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/box_transaksi_gudang"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="@id/list_transasksi_gudang"
            android:background="@drawable/box_stok_gudang">

                <TextView
                    android:id="@+id/tv_id_invoice_transaksi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="id"
                    android:textSize="21sp"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="@+id/box_transaksi_gudang" />

                <TextView
                    android:id="@+id/tv_no_invoice_transaksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Invoice"
                    android:textStyle="bold"
                    android:textSize="19sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/box_transaksi_gudang"
                    />

                <TextView
                    android:id="@+id/tv_space2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#4A4545"
                    android:layout_marginStart="21dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_no_invoice_transaksi"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <TextView
                    android:id="@+id/tv_nama_pt_transaksi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Semen Tiga Roda"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#4A4545"
                    app:layout_constraintTop_toBottomOf="@id/tv_no_invoice_transaksi"
                    app:layout_constraintStart_toEndOf="@id/tv_space2"
                    app:layout_constraintEnd_toStartOf="@id/tv_space3"
                    />

                <TextView
                    android:id="@+id/tv_space3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#4A4545"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_status_transaksi"
                    />
                <TextView
                    android:id="@+id/tv_tanggal_transaksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tgl"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintEnd_toEndOf="@+id/box_transaksi_gudang"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <TextView
                    android:id="@+id/tv_jam_transaksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="07.00"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintEnd_toEndOf="@+id/box_transaksi_gudang"
                    app:layout_constraintTop_toTopOf="@id/tv_tanggal_transaksi"
                    />

                <TextView
                    android:id="@+id/btn_tanda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=">"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="17dp"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintTop_toTopOf="@id/tv_jam_transaksi"
                    app:layout_constraintEnd_toEndOf="@id/box_transaksi_gudang"
                    />


                <TextView
                    android:id="@+id/tv_status_transaksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menunggu Dikirim"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@id/btn_tanda"
                    app:layout_constraintEnd_toEndOf="parent"
                    />


        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
