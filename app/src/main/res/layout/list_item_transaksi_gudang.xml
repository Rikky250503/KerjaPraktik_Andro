<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/box_transaksi_gudang"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/box_stok_gudang">

        <TextView
            android:id="@+id/tv_id_stok_gudang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="id"
            android:textSize="21sp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@+id/box_transaksi_gudang"

            />

        <TextView
            android:id="@+id/tv_nama_customer_gudang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PT.Abadi jaya"
            android:textStyle="bold"
            android:textSize="21sp"
            android:textColor="@color/black"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/box_transaksi_gudang"
            />

        <TextView
            android:id="@+id/tv_space1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#4A4545"
            android:layout_marginTop="65dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tv_nama_barang_gudang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Semen Tiga Roda Portland Composite Cement"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#4A4545"
            android:layout_marginTop="5dp"
            android:layout_marginStart="25dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_nama_customer_gudang"
            app:layout_constraintStart_toStartOf="@id/tv_space1" />




    </androidx.constraintlayout.widget.ConstraintLayout>
