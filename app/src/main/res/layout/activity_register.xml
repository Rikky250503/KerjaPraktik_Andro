<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/bglogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Activity.RegisterActivity">

    <ImageView
        android:id="@+id/iv_back_register"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_arrow_back_ios_24"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_1"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="160dp"
        android:layout_marginEnd="160dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/box_create"
        android:layout_width="match_parent"
        android:layout_height="625dp"
        android:background="@drawable/corner_left"
        android:elevation="500dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Create New Account"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="@id/box_create"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons_user"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginHorizontal="36dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/img_3"
            app:layout_constraintTop_toBottomOf="@id/tv_register"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="12dp">

            <TextView
                android:id="@+id/tv_user_baru"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="24dp"
                android:text="Username"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_user_baru"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                app:layout_constraintTop_toBottomOf="@id/tv_user_baru"
                android:layout_marginHorizontal="12dp"
                android:hint="Masukkan Username Baru" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons_pass"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:layout_marginHorizontal="36dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/img_3"
            app:layout_constraintTop_toBottomOf="@id/cons_user"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="12dp">

            <TextView
                android:id="@+id/tv_pass_baru"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="24dp"
                android:text="Password"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_pass_baru"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                app:layout_constraintTop_toBottomOf="@id/tv_pass_baru"
                android:inputType="textPassword"
                android:layout_marginHorizontal="12dp"
                android:hint="Masukkan Password Baru" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons_nama"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginHorizontal="36dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/img_3"
            app:layout_constraintTop_toBottomOf="@id/cons_pass"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="12dp">

            <TextView
                android:id="@+id/tv_nama_baru"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="24dp"
                android:text="Nama Lengkap"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_nama_baru"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                app:layout_constraintTop_toBottomOf="@id/tv_nama_baru"
                android:layout_marginHorizontal="12dp"
                android:hint="Masukkan Nama Lengkap" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons_jabatan"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginHorizontal="36dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/img_3"
            app:layout_constraintTop_toBottomOf="@id/cons_nama"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="12dp">

            <TextView
                android:id="@+id/tv_jabatan_baru"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="24dp"
                android:text="Jabatan"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_jabatan_baru"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                app:layout_constraintTop_toBottomOf="@id/tv_jabatan_baru"
                android:layout_marginHorizontal="12dp"
                android:hint="Masukkan Jabatan(P,J,G)" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            app:layout_constraintTop_toBottomOf="@id/cons_jabatan"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="72dp"
            android:layout_marginBottom="28dp"
            app:cornerRadius="12dp"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="REGISTER"
            android:backgroundTint="#AEC8D7"
            android:textAllCaps="false"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>