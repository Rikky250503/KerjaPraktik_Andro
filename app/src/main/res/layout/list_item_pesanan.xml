<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:elevation="32dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/box_seng"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/img_3"
        >

        <TextView
            android:id="@+id/tv_id_pemesanan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="id"
            android:textSize="21sp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@+id/box_seng"
            />

        <TextView
            android:id="@+id/tv_no_invoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Invoice"
            android:textStyle="bold"
            android:textSize="21sp"
            android:textColor="@color/black"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/box_seng"
            />

        <TextView
            android:id="@+id/tv_space2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#4A4545"
            android:layout_marginStart="27dp"
            app:layout_constraintTop_toBottomOf="@id/tv_no_invoice"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tv_nama_pt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Semen Tiga Roda Portland Composite Cement"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#4A4545"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_no_invoice"
            app:layout_constraintStart_toEndOf="@id/tv_space2"
            app:layout_constraintEnd_toStartOf="@id/tv_space3"
            />

        <TextView
            android:id="@+id/tv_space3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#4A4545"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_status"
            />

        <TextView
            android:id="@+id/tv_tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tgl"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="@+id/box_seng"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/tv_jam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07.00"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="@+id/box_seng"
            app:layout_constraintTop_toTopOf="@id/tv_tanggal"
            />

        <TextView
            android:id="@+id/btn_tanda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toTopOf="@id/tv_jam"
            app:layout_constraintEnd_toEndOf="@id/box_seng"
            />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menunggu Dikirim"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toTopOf="@id/btn_tanda"
            app:layout_constraintEnd_toEndOf="@id/box_seng"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>