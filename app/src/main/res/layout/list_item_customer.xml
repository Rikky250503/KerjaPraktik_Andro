<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    android:elevation="32dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/box_customer"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/img_3">
        <TextView
            android:id="@+id/tv_id_customer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="id"
            android:textSize="21sp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@+id/box_customer"
            />

        <TextView
            android:id="@+id/tv_nama_customer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="PT.Cahaya Makmur"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="#4A4545"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="@id/box_customer"
            app:layout_constraintStart_toEndOf="@id/tv_space2"
            app:layout_constraintEnd_toStartOf="@id/tv_space3"
            />

        <TextView
            android:id="@+id/tv_space2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#4A4545"
            android:layout_marginStart="27dp"
            app:layout_constraintTop_toBottomOf="@id/tv_nama_customer"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tv_alamat_customer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Jalan Rajawali No.240"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#4A4545"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_nama_customer"
            app:layout_constraintStart_toEndOf="@id/tv_space2"
            app:layout_constraintEnd_toStartOf="@id/tv_space3"
            />

        <TextView
            android:id="@+id/tv_space3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#4A4545"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_no_hp_customer"
            />

        <TextView
            android:id="@+id/tv_no_hp_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="089676543457"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@id/box_customer"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>